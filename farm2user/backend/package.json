{
    "name": "farm2door-backend",
    "version": "1.0.0",
    "description": "Farm2Door Platform - Backend API",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "test:all": "vitest run",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "migrate": "tsx src/config/migrations.ts",
        "seed": "tsx src/config/seed.ts"
    },
    "keywords": [
        "farm",
        "agriculture",
        "organic",
        "ecommerce",
        "bio-products"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "pg": "^8.11.3",
        "sequelize": "^6.35.1",
        "typescript": "^5.3.3",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.0",
        "dotenv": "^16.3.1",
        "winston": "^3.11.0",
        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "joi": "^17.11.0",
        "nodemailer": "^6.9.7"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.6",
        "@types/bcryptjs": "^2.4.6",
        "@types/jsonwebtoken": "^9.0.7",
        "vitest": "^1.1.0",
        "supertest": "^6.3.3",
        "@types/supertest": "^6.0.2",
        "eslint": "^8.56.0",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "@typescript-eslint/parser": "^6.17.0",
        "prettier": "^3.1.1",
        "tsx": "^4.7.0"
    }
}